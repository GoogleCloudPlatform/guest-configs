# Name the attached disks as the specified by deviceName.

ACTION!="add|change", GOTO="gce_disk_naming_end"
SUBSYSTEM!="block", GOTO="gce_disk_naming_end"

# SCSI naming
KERNEL=="sd*|vd*", IMPORT{program}="scsi_id --export --whitelisted -d $tempnode"

# NVME Local SSD naming
KERNEL=="nvme0n1*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-0"
KERNEL=="nvme0n2*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-1"
KERNEL=="nvme0n3*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-2"
KERNEL=="nvme0n4*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-3"
KERNEL=="nvme0n5*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-4"
KERNEL=="nvme0n6*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-5"
KERNEL=="nvme0n7*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-6"
KERNEL=="nvme0n8*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-7"
KERNEL=="nvme0n9*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-8"
KERNEL=="nvme0n10*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-9"
KERNEL=="nvme0n11*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-10"
KERNEL=="nvme0n12*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-11"
KERNEL=="nvme0n13*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-12"
KERNEL=="nvme0n14*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-13"
KERNEL=="nvme0n15*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-14"
KERNEL=="nvme0n16*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-15"
KERNEL=="nvme0n17*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-16"
KERNEL=="nvme0n18*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-17"
KERNEL=="nvme0n19*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-18"
KERNEL=="nvme0n20*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-19"
KERNEL=="nvme0n21*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-20"
KERNEL=="nvme0n22*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-21"
KERNEL=="nvme0n23*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-22"
KERNEL=="nvme0n24*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL_SHORT}="local-nvme-ssd-23"
KERNEL=="nvme*", ATTRS{model}=="nvme_card", ENV{ID_SERIAL}="Google_EphemeralDisk_$env{ID_SERIAL_SHORT}"

# NVME Persistent Disk Naming
KERNEL=="nvme*n*", ATTRS{model}=="nvme_card-pd", IMPORT{program}="google_nvme_id -d $tempnode"

# Symlinks
KERNEL=="sd*|vd*|nvme*", ENV{DEVTYPE}=="disk", SYMLINK+="disk/by-id/google-$env{ID_SERIAL_SHORT}"
KERNEL=="sd*|vd*|nvme*", ENV{DEVTYPE}=="partition", SYMLINK+="disk/by-id/google-$env{ID_SERIAL_SHORT}-part%n"

LABEL="gce_disk_naming_end"
